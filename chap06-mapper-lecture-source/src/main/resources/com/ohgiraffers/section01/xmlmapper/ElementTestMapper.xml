<!--  <sql> 엘리먼트 (반복되는 부분을 줄일수 있다)
        각 매핑 구문에서 공통으로 사용할 수 있는 SQL 문자열의 일부를 정의하고 재사용하기 위해 사용한다.
-->
    <sql id="columns">
        menu_code,
        menu_name,
        menu_price,
        category_code,
        orderable_status
    </sql>

    <select id="selectSqlTest" resultMap="menuResultMap2">
